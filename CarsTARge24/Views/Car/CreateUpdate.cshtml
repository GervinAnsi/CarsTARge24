@model CarsTARge24.Models.Cars.CarsCreateUpdateViewModel

@{
    ViewData["Title"] = Model.Id == Guid.Empty ? "Create Car" : "Update Car";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="@((Model.Id == Guid.Empty) ? "Create" : "Update")" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Brand" class="form-label"></label>
        <input asp-for="Brand" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="FuelType" class="form-label"></label>
        <input asp-for="FuelType" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Power" class="form-label"></label>
        <input asp-for="Power" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label asp-for="Drivetrain" class="form-label"></label>
        <input asp-for="Drivetrain" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Info" class="form-label"></label>
        <textarea asp-for="Info" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>