@model List<CarsTARge24.Models.Cars.CarsIndexViewModel>

@{
    ViewData["Title"] = "Cars";
}

<h1>Cars</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        Add New Car
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Fuel Type</th>
            <th>Power</th>
            <th>Drivetrain</th>
            <th>Info</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var car in Model)
            {
                <tr>
                    <td>@car.Brand</td>
                    <td>@car.Model</td>
                    <td>@car.FuelType</td>
                    <td>@car.Power</td>
                    <td>@car.Drivetrain</td>
                    <td>@car.Info</td>
                    <td>
                        <a asp-action="Update"
                           asp-route-id="@car.Id"
                           class="btn btn-sm btn-warning">
                            Edit
                        </a>

                        <a asp-action="Delete"
                           asp-route-id="@car.Id"
                           class="btn btn-sm btn-danger">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">
                    No cars found.
                </td>
            </tr>
        }
    </tbody>
</table>
